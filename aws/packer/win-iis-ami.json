{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "aws_region": "{{env `AWS_REGION`}}",
        "aws_ami_image": "ami-14a89d68",
        "image_version": "1.0"
    },
    "builders":
    [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `aws_region`}}",
            "source_ami": "{{user `aws_ami_image`}}",
            "instance_type": "t2.large",
            "communicator": "winrm",
            "ami_name": "win-iis-{{timestamp}}",
            "user_data_file": "./user-data/SetUpWinRM.ps1",
            "winrm_username": "Administrator",
            "winrm_use_ssl": true,
            "winrm_insecure": true,
            "tags":
            {
                "Name": "win-iis-{{user `image_version`}}",
                "OS_Version": "Windows 2012 R2 Base",
                "Description": "For windows testing"
            }
        }
    ],
    "provisioners":
    [
        {
            "type": "powershell",
            "scripts":
            [
                "./provisioning/EC2Config.ps1",
                "./provisioning/SetupPrerequisites.ps1"
            ]
        }
    ]
}
